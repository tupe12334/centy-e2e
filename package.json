{
  "name": "centy-e2e",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "End-to-end tests for Centy CLI and Web App",
  "scripts": {
    "test": "vitest run",
    "test:cli": "vitest run src/cli",
    "test:web": "playwright test",
    "test:web:ui": "playwright test --ui",
    "test:web:headed": "playwright test --headed",
    "test:all": "pnpm test:cli && pnpm test:web",
    "daemon:start": "cd ../centy-daemon && cargo run --release",
    "daemon:build": "cd ../centy-daemon && cargo build --release"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.1",
    "execa": "^9.5.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.24.0"
}
